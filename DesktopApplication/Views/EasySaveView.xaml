<Window x:Class="DesktopApplication.Views.EasySaveView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopApplication"
        mc:Ignorable="d"
        Title="EasySaveView" Height="450" Width="800">
    <StackPanel>
        <TextBox Width="300" Text="{Binding Input}" />
        <TextBlock Text="{Binding Output}"
                   Width="100"
                   TextWrapping="WrapWithOverflow"/>
        <Button Command="{Binding ClickCommand}" Content="Process" />


    </StackPanel>
</Window>